<Window x:Class="RandomGraph.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Random Graphs" Height="350" Width="525" WindowState="Maximized">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock>Number Verticies</TextBlock>
            <TextBox Name="Vertice">100</TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock>Probability %</TextBlock>
            <TextBox Name="Odds">50</TextBox>
        </StackPanel>
        <Button Name="Update" Click="Update_Click">Update</Button>
        <Canvas x:Name="DrawArea" />
    </StackPanel>
    
</Window>
